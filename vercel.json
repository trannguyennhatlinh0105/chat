{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/api/chat$", "dest": "/server.js" },
    { "src": "^/api/config$", "dest": "/server.js" },
    { "src": "^/api/debug$", "dest": "/server.js" },
    { "src": "^/webhook$",  "dest": "/server.js" },
    { "src": "^/health$",   "dest": "/server.js" },
    { "src": "^/(.*\\.(css|js|png|jpg|jpeg|gif|ico|svg))$", "dest": "/public/$1" },
    { "src": "^/(.*)",       "dest": "/public/index.html" }
  ]
}
